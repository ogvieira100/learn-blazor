@page "/bind"
@rendermode InteractiveAuto

<h3>Bind Components</h3>

@*
   Bind one way bind (unidirecional): objetivo pegar o valor do componente e passar para a propriedade  
*@

<div class="card text-bg-primary mb-3" style="max-width: 18rem;">
    <div class="card-header">Header</div>
    <div class="card-body">
        <h5 class="card-title">One way directional</h5>
        <p class="card-text">
            @Texto
        </p>
    </div>
</div>
<div class="card text-bg-primary mb-3" style="max-width: 18rem;">
    <div class="card-header">Header</div>
    <div class="card-body">
        <h5 class="card-title">Two way direcional</h5>
        <label for="name"></label>
        <input class="form-control"
               type="txt"
               name="name"
               id="name"
               @bind=Texto />
    </div>
</div>
<div class="card text-bg-primary mb-3" style="max-width: 18rem;">
    <div class="card-header">Header</div>
    <div class="card-body">
        <h5 class="card-title">Two way direcional no lost-focus</h5>
        <label for="name2"></label>
        <input type="txt"
               name="name2"
               id="name2"
               class="form-control"
               @bind:event="oninput"
               @bind=Texto />
    </div>
</div>

<div class="card text-bg-primary mb-3" style="max-width: 18rem;">
    <div class="card-header">Header</div>
    <div class="card-body">
        <h5 class="card-title">One way directional bind get set</h5>
        <input class="form-control"
               type="txt"
               @bind:set="(value)=> { Texto  = value!; }"
               @bind:event="oninput"
               name="name3"
               id="name3"
               @bind:get="Texto" />


    </div>
</div>

<div class="card text-bg-primary mb-3" style="max-width: 18rem;">
    <div class="card-header">Header</div>
    <div class="card-body">
        <h5 class="card-title">Two way direcional</h5>
        <label for="name2"></label>
        <input class="form-control"
               type="txt"
               @oninput="((e)=> Texto = e.Value!.ToString() )"
               name="name4"
               id="name4" />
    </div>
</div>




